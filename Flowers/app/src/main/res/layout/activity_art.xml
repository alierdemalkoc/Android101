<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtActivity"
    android:background="@android:color/holo_blue_bright">


    <EditText
        android:id="@+id/bolText"
        android:layout_width="209dp"
        android:layout_height="38dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Çiçeğin Bölgesi:"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ozText" />

    <EditText
        android:id="@+id/ozText"
        android:layout_width="209dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start"
        android:textColorHint="#000000"
        android:hint="Çiçeğin Özellikleri:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bolText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="292dp"
        android:layout_height="239dp"
        android:layout_marginTop="32dp"
        android:onClick="selectImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cicek" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Çiçeğin Adı:"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ozText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="save"
        android:text="Kaydet"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>